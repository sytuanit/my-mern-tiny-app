{
	"info": {
		"_postman_id": "my-tiny-app-api",
		"name": "My Tiny App API",
		"description": "CRUD API collection for My Tiny App - Node.js Express with MongoDB",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "My Tiny App",
			"item": [
				{
					"name": "1. GET - Get All Items",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/items",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"items"
							]
						},
						"description": "Lấy danh sách tất cả items"
					},
					"response": []
				},
				{
					"name": "2. GET - Get Item By ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/items/{{itemId}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"items",
								"{{itemId}}"
							]
						},
						"description": "Lấy chi tiết item theo ID. Thay {{itemId}} bằng ID thực tế từ database."
					},
					"response": []
				},
				{
					"name": "3. POST - Create New Item",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Laptop Dell XPS 15\",\n  \"description\": \"High-performance laptop for developers\",\n  \"price\": 1599.99,\n  \"quantity\": 5\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/items",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"items"
							]
						},
						"description": "Tạo item mới. Có thể chỉ cần field 'name' (required), các field khác là optional."
					},
					"response": []
				},
				{
					"name": "4. POST - Create Item (Minimal)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Simple Item\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/items",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"items"
							]
						},
						"description": "Tạo item mới chỉ với name (minimum required field)"
					},
					"response": []
				},
				{
					"name": "5. PUT - Update Item",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Updated Item Name\",\n  \"price\": 1499.99,\n  \"quantity\": 3\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/items/{{itemId}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"items",
								"{{itemId}}"
							]
						},
						"description": "Cập nhật item. Có thể chỉ gửi các field muốn cập nhật (partial update)."
					},
					"response": []
				},
				{
					"name": "6. PUT - Update Item (Partial)",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"price\": 1299.99\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/items/{{itemId}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"items",
								"{{itemId}}"
							]
						},
						"description": "Ví dụ cập nhật chỉ một field (price)"
					},
					"response": []
				},
				{
					"name": "7. DELETE - Delete Item",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/items/{{itemId}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"items",
								"{{itemId}}"
							]
						},
						"description": "Xóa item theo ID"
					},
					"response": []
				},
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/health",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"health"
							]
						},
						"description": "Kiểm tra server có đang chạy không"
					},
					"response": []
				}
			]
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:3000",
			"type": "string"
		},
		{
			"key": "itemId",
			"value": "",
			"type": "string",
			"description": "ID của item (sẽ được set sau khi tạo item mới)"
		}
	]
}
