# Example Services Configuration - Dev Environment
# Copy to terraform.tfvars and fill in your values
# CI/CD will update image_tag automatically

environment = "dev"
name_prefix = "dev-"

# Image configuration (updated by CI/CD)
docker_registry  = "localhost"
image_tag        = "dev-latest"  # CI/CD will update this
image_pull_policy = "Never"

# Replicas
app_replicas      = 1
consumer_replicas = 1
ui_replicas       = 1

# Resource limits (dev - smaller)
app_resources = {
  requests = {
    memory = "64Mi"
    cpu    = "50m"
  }
  limits = {
    memory = "128Mi"
    cpu    = "100m"
  }
}

consumer_resources = {
  requests = {
    memory = "64Mi"
    cpu    = "50m"
  }
  limits = {
    memory = "128Mi"
    cpu    = "100m"
  }
}

ui_resources = {
  requests = {
    memory = "128Mi"
    cpu    = "50m"
  }
  limits = {
    memory = "256Mi"
    cpu    = "100m"
  }
}

# Kubernetes context
kubeconfig_path = ""
kube_context    = "minikube"

