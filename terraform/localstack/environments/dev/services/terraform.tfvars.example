# Example Services Configuration - Dev Environment
# Copy to terraform.tfvars and fill in your values
# CI/CD will update image tags automatically

environment = "dev"
name_prefix = "dev-"

# Instance configuration
ami_id        = "ami-12345678"
instance_type = "t3.micro"

# Image configuration (updated by CI/CD)
docker_registry    = "localhost"
app_image_tag      = "dev-latest"      # CI/CD will update this
consumer_image_tag = "dev-latest"      # CI/CD will update this
ui_image_tag       = "dev-latest"      # CI/CD will update this

# Service configuration
mongodb_uri    = "mongodb://localhost:27017/my-tiny-app-dev"
kafka_broker   = "localhost:9093"
kafka_topic    = "item-events-dev"
kafka_group_id = "my-tiny-app-consumer-group-dev"
app_api_url    = "http://localhost:3000"
api_url        = "http://localhost:3000"
node_env       = "development"

# AWS configuration
aws_region         = "us-east-1"
aws_endpoint_url   = "http://localstack:4566"
localstack_endpoint = "http://localhost:4567"

# Ports
app_port      = "3000"
consumer_port = "3001"
ui_port       = "3002"

